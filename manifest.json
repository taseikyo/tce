{
  "manifest_version": 3,
  "name": "TCE",
  "version": "0.0.1",
  "description": "TCE: taseikyo's Chrome Extensions",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "clipboardWrite",
    "notifications"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "options_page": "options.html",
  "commands": {
    "copy_link_and_title": {
      "suggested_key": { "default": "Alt+1" },
      "description": "复制网页标题+链接"
    },
    "copy_bilibili_author": {
      "suggested_key": { "default": "Alt+2" },
      "description": "复制Bilibili作者名+链接"
    },
    "copy_douyin_body": {
      "suggested_key": { "default": "Alt+3" },
      "description": "复制Douyin标题+链接"
    }
  },
  "host_permissions": ["https://*/*", "http://*/*"],
  "icons": { "128": "image/icon.png" }
}